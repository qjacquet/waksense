{
  "name": "waksense",
  "version": "2.0.0",
  "description": "Wakfu resource tracking overlay application",
  "main": "dist/main/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json && tsc -p tsconfig.renderer.json && npm run copy-assets",
    "build:watch": "tsc -p tsconfig.json --watch",
    "copy-assets": "node scripts/copy-assets.js",
    "start": "npm run build && electron dist/main/index.js",
    "dev": "npm run copy-assets && concurrently \"npm run build:watch\" \"npm run copy-assets:watch\" \"wait-on dist/main/index.js dist/assets && electron dist/main/index.js\"",
    "copy-assets:watch": "node scripts/copy-assets-watch.js",
    "package": "electron-builder",
    "package:win": "electron-builder --win",
    "clean": "rimraf dist"
  },
  "keywords": [
    "wakfu",
    "overlay",
    "tracker",
    "gaming"
  ],
  "author": "Bellucci",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "adm-zip": "^0.5.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.2",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "electron-store": "^8.1.0",
    "iconv-lite": "^0.6.3",
    "lottie-web": "^5.13.0"
  },
  "build": {
    "appId": "com.waksense.app",
    "productName": "Waksense",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "Waksense.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
